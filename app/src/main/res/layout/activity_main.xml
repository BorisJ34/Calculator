<?xml version="1.0" encoding="utf-8"?>
<!--Для этого задания я выбрал макет ConstraintLayout, так как он позволят расположить кнопки
в необходимой последовательности при небольшом количестве строк кода-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/Summ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/Multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/Summ"
        app:layout_constraintTop_toTopOf="@id/Summ"
        android:layout_marginStart="20dp"/>
    <Button
        android:id="@+id/Divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/Multiply"
        app:layout_constraintTop_toTopOf="@id/Multiply"
        android:layout_marginStart="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>