<?xml version="1.0" encoding="utf-8"?>
<!--Для этого задания я выбрал макет ConstraintLayout, так как он позволят расположить кнопки
в необходимой последовательности при небольшом количестве строк кода-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:background="@drawable/repeat_pic"
    android:orientation="vertical"
    android:paddingTop="20dp">
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/Summ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/plus"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/Multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/Summ"
            app:layout_constraintTop_toTopOf="@id/Summ"
            android:layout_marginStart="20dp"
            android:text="@string/multiply"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/Divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/Multiply"
            app:layout_constraintTop_toTopOf="@id/Multiply"
            android:layout_marginStart="20dp"
            android:text="@string/divide"
            android:backgroundTint="@color/black"/>
        <Button
            android:id="@+id/Equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Summ"
            app:layout_constraintStart_toStartOf="@id/Summ"
            app:layout_constraintEnd_toEndOf="@id/Divide"
            android:text="@string/equals"
            android:backgroundTint="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>